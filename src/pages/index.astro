		function actualizarReloj() {
		const ahora = new Date();
		const hoy = ahora.getDate();
		const diaActual = ahora.getDay(); // 0 = Domingo, 1 = Lunes, ..., 6 = Sábado

		// Configurar para los domingos a las 10:30 am (hora local de España Madrid)
		const proximoDomingo = () => {
			const fecha = new Date();
			fecha.setDate(hoy + (7 - diaActual) % 7); // Próximo domingo
			fecha.setHours(11, 30, 0, 0); // 10:30 am

			// Convertir las fechas a milisegundos y luego comparar
			return (fecha.getTime() - ahora.getTime()) < 0 ? new Date(fecha.setDate(fecha.getDate() + 7)) : fecha;
		};

		// Calcular el tiempo restante en segundos
		const tiempoRestante = Math.floor((proximoDomingo().getTime() - ahora.getTime()) / 1000);

		const dias = Math.floor(tiempoRestante / (24 * 3600)).toString();
		const horas = Math.floor((tiempoRestante % (24 * 3600)) / 3600).toString();
		const minutos = Math.floor((tiempoRestante % 3600) / 60).toString();
		const segundos = (tiempoRestante % 60).toString();

		// Actualizar los elementos en el DOM
		document.getElementById('dias').textContent = dias.length < 2 ? "0" + dias : dias;
		document.getElementById('horas').textContent = horas.length < 2 ? "0" + horas : horas;
		document.getElementById('minutos').textContent = minutos.length < 2 ? "0" + minutos : minutos;
		document.getElementById('segundos').textContent = segundos.length < 2 ? "0" + segundos : segundos;
	}
